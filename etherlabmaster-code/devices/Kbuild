REV := $(shell if test -s $(src)/../revision; then \
		cat $(src)/../revision; \
	else \
		hg id -i $(src)/.. 2>/dev/null || echo "unknown"; \
	fi)

ifeq (1,1)
	EC_GENERIC_OBJ := generic.o
	obj-m += ec_generic.o
	ec_generic-objs := $(EC_GENERIC_OBJ)
	CFLAGS_$(EC_GENERIC_OBJ) = -DREV=$(REV)
endif

ifeq (0,1)
	EC_8139TOO_OBJ := 8139too-3.10-ethercat.o
	obj-m += ec_8139too.o
	ec_8139too-objs := $(EC_8139TOO_OBJ)
	CFLAGS_$(EC_8139TOO_OBJ) = -DREV=$(REV)
endif

ifeq (0,1)
	EC_E100_OBJ := e100-3.10-ethercat.o
	obj-m += ec_e100.o
	ec_e100-objs := $(EC_E100_OBJ)
	CFLAGS_$(EC_E100_OBJ) = -DREV=$(REV)
endif

ifeq (0,1)
	obj-m += e1000/
endif

ifeq (0,1)
	obj-m += e1000e/
endif

ifeq (0,1)
	EC_R8169_OBJ := r8169-3.10-ethercat.o
	obj-m += ec_r8169.o
	ec_r8169-objs := $(EC_R8169_OBJ)
	CFLAGS_$(EC_R8169_OBJ) = -DREV=$(REV)
endif

KBUILD_EXTRA_SYMBOLS := \
	/usr/local/epics/etherlabmaster-code/$(LINUX_SYMVERS) \
	/usr/local/epics/etherlabmaster-code/master/$(LINUX_SYMVERS)

