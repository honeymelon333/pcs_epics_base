TOPDIR := $(src)/../..

REV := $(shell if test -s $(TOPDIR)/revision; then \
		cat $(TOPDIR)/revision; \
	else \
		hg id -i $(TOPDIR) 2>/dev/null || echo "unknown"; \
	fi)

ifeq (0,1)
	EC_E1000E_OBJ := \
		82571-3.10-ethercat.o \
		ethtool-3.10-ethercat.o \
		ich8lan-3.10-ethercat.o \
		netdev-3.10-ethercat.o \
		param-3.10-ethercat.o \
		phy-3.10-ethercat.o

	ifeq (0,1)
		EC_E1000E_OBJ += \
			80003es2lan-3.10-ethercat.o \
			mac-3.10-ethercat.o \
			manage-3.10-ethercat.o \
			nvm-3.10-ethercat.o
	else
		EC_E1000E_OBJ += \
			es2lan-3.10-ethercat.o \
			lib-3.10-ethercat.o
	endif

	obj-m += ec_e1000e.o
	ec_e1000e-objs := $(EC_E1000E_OBJ)

	CFLAGS_netdev-3.10-ethercat.o = -DREV=$(REV)
endif

KBUILD_EXTRA_SYMBOLS := \
	/usr/local/epics/etherlabmaster-code/$(LINUX_SYMVERS) \
	/usr/local/epics/etherlabmaster-code/master/$(LINUX_SYMVERS)

